@model IEnumerable<Employee>

@{ 
    ViewBag.Title = "List Employee";
}

<div class="card-deck">
    @foreach (var emp in Model)
    {
        var photoPath = "~/Images/"+ (emp.PhotoPath ?? "noimage.png");
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@emp.Name</h3>
            </div>
            <img class="card-img-top" src="@photoPath" asp-append-version="true" style="height:200px; width:auto" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@emp.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@emp.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-action="delete" asp-controller="home" asp-route-id="@emp.Id" onclick="return confirm('Are you sure want to Delete?')" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>